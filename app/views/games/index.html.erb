<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Game ID</th>
      <th>Player ID</th>
      <th>Opponent ID</th>
      <th>State</th>
      <th>Winner</th>
      <th>Current Player ID</th>
      <th>Is waiting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.player_id %></td>
        <td><%= game.opponent_id %></td>
        <td><%= game.state %></td>
        <td><%= game.winner %></td>
        <td><%= game.current_player %></td>
        <td><%= game.is_waiting %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

